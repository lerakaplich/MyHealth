<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/medEnter"
        android:layout_width="750dp"
        android:layout_height="75dp"
        android:background="#FFA500"
        android:ems="10"
        android:hint="  Введите название препарата"
        android:inputType="text"
        android:layerType="software"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/medType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.69" />

    <Spinner
        android:id="@+id/medTypeSpinner"
        android:layout_width="750dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@+id/periodMed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.927" />

    <TextView
        android:id="@+id/periodMed"
        android:layout_width="750dp"
        android:layout_height="30dp"
        android:background="#FFA500"
        android:gravity="center_horizontal|center_vertical"
        android:layerType="software"
        android:text="Частота приёма"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/periodMedSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.938" />

    <Spinner
        android:id="@+id/periodMedSpinner"
        android:layout_width="750dp"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:layerType="none"
        app:layout_constraintBottom_toTopOf="@+id/medStartDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.951" />

    <EditText
        android:id="@+id/medEndDate"
        android:layout_width="750dp"
        android:layout_height="75dp"
        android:background="#FFA500"
        android:ems="10"
        android:hint="  Введите дату окончания приёма"
        android:inputType="date"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.779" />

    <TextView
        android:id="@+id/medType"
        android:layout_width="750dp"
        android:layout_height="35dp"
        android:background="#FFA500"
        android:gravity="center_horizontal|center_vertical"
        android:layerType="software"
        android:text="Вид препарата"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/medTypeSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.903" />

    <EditText
        android:id="@+id/medStartDate"
        android:layout_width="750dp"
        android:layout_height="75dp"
        android:background="#FFA500"
        android:ems="10"
        android:hint="  Введите дату начала приёма"
        android:inputType="date"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/medEndDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addText"
        app:layout_constraintVertical_bias="0.957" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:background="#00FFFFFF"
        android:text="Назад"
        android:textColor="#7C7972"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавление лекарства"
        android:textColor="#575651"
        android:textSize="34sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />


    <Button
        android:id="@+id/saveButton"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:text="Сохранить"
        android:textColor="#7C7972"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/addText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <ImageView
        android:id="@+id/saveImage"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/savebutton" />

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="86dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#7C7972"
        android:text="Профиль"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mainButton"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/mainButton"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#7C7972"
        android:text="Главная"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profileButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
